<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.encuesta.rightway.encuesta.ViajesTipicos"
    tools:showIn="@layout/activity_viajes_tipicos"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INTEGRANTE FAMILIA"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:gravity="center_horizontal"
            android:id="@+id/integranteFam" />

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Buscar Dirección de Origen"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/button3"
            android:onClick="BuscarDireccionOrigen"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione Comuna:"
            android:textColor="#FFF"
            android:id="@+id/textView"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/spinner_localidad" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Casa"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:onClick="DirCasaO"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Of/Est"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:onClick="DirOfO"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione Barrio"
            android:textColor="#FFF"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_Barrio" />

        <EditText
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:id="@+id/editDirOrigen"
            android:hint="Direcion Origen"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:text="Hora Inicio"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:id="@+id/button4"
                android:onClick="HoraInicio"/>

            <EditText
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:id="@+id/txtTime"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Buscar Dirección Destino"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"
            android:onClick="BuscarDireccionDestino"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione Comuna:"
            android:textColor="#FFF"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/spinner_localidad2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Casa"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:onClick="DirCasaD"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Of/Est"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:onClick="DirOfD"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione Barrio"
            android:textColor="#FFF"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_Barrio2" />


        <EditText
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:id="@+id/editDirDestino"
            android:hint="Direcion Destino"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:text="Hora LLegada"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                android:onClick="HoraLlegada"/>

            <EditText
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:id="@+id/txtTime2"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Motivo Viaje    "
                android:textColor="#FFF"
                android:textStyle="bold"
                android:id="@+id/textView19" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_proposito" />


        </LinearLayout>

        <EditText
            android:id="@+id/edt_otro_motivoViaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:hint="Otro?"
            android:textColorHint="@color/colorAccent"
            android:visibility="gone"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Modo de Transporte"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:id="@+id/textView20"
                android:layout_marginRight="5dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_modo" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dias de la Semana que Realiza este Viaje"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:id="@+id/textView21" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="L"
                android:id="@+id/buttonL"
                android:src="@drawable/lunesoff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="M"
                android:id="@+id/buttonM"
                android:src="@drawable/martesoff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="MI"
                android:id="@+id/buttonMI"
                android:src="@drawable/miercolesoff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="J"
                android:id="@+id/buttonJ"
                android:src="@drawable/juevesoff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="V"
                android:id="@+id/buttonV"
                android:src="@drawable/viernesoff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="S"
                android:id="@+id/buttonS"
                android:src="@drawable/sabadooff"
                android:background="@null"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="D"
                android:id="@+id/buttonD"
                android:src="@drawable/domingooff"
                android:background="@null"/>
        </TableRow>



        <LinearLayout
            android:id="@+id/layout_privado"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Parqueadero Vehiculo?"
                android:textColor="#FFF"
                android:id="@+id/textView28" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_parqueo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_publico"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cuanto Camino Antes de tomar el Transporte?"
                android:textColor="#FFF"
                android:id="@+id/textView23" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_caminoinicio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cuantos minutos espero antes de abrodar?"
                android:textColor="#FFF"
                android:id="@+id/textView24" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_timpoespera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cuantos metros camina despues de bajar?"
                android:textColor="#FFF"
                android:id="@+id/textView25" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_caminofin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hizo Transbordo?"
                android:textColor="#FFF"
                android:id="@+id/textView26" />

            <RadioGroup
                android:id="@+id/radioTransbordo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF">
                <RadioButton
                    android:id="@+id/radioTransbordoSI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    />
                <RadioButton
                    android:id="@+id/radioTransbordoNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/layout_tiempoParada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cuanto Tiempo espera el Siguiente Vehiculo?"
                    android:textColor="#FFF"
                    android:id="@+id/textView27" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_tiempotransbordo" />



            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="¿Si necesita ayuda para diversas tareas, (cuidado de niños, del hogar, etc.)Tiene personas que puedan ayudarle?"
            android:textColor="#FFF" />

        <RadioGroup
            android:id="@+id/radioAyuda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF">
            <RadioButton
                android:id="@+id/radioAyudaSI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="SI"
                />
            <RadioButton
                android:id="@+id/radioAyudaNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="NO" />

        </RadioGroup>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Determine cuánto le costo este viaje"
            android:textColor="#FFF"
            android:id="@+id/textView5" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_costoViaje"/>

    </LinearLayout>
</ScrollView>
